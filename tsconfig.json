{
    "compilerOptions": {
        "strict": true,
        "module": "NodeNext",
        "target": "es2017",
        "baseUrl": "./",
        "paths": {
            "#*": ["./src/*"]
        },
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "src/knexfile.ts", "knexfile.js", "src/knexfile.ts"],
    "exclude": ["node_modules", "src/**/*.test.*", "src/**/*.spec.*"]
}
